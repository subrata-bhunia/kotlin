  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "phoneNumber": { "type": "string" },
          "imageUrl": { "type": "string" }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "userID": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["userID", "name", "category", "address", "city", "image"]
      },
      "Product": {
        "type": "object",
        "properties": {
          "userID": { "type": "string" },
          "name": { "type": "string" },
          "manufacturer": { "type": "string" },
          "stock": { "type": "number" },
          "description": { "type": "string" }
        },
        "required": ["userID", "name", "manufacturer", "stock"]
      },
      "Purchase": {
        "type": "object",
        "properties": {
          "userID": { "type": "string" },
          "ProductID": { "type": "string" },
          "QuantityPurchased": { "type": "number" },
          "PurchaseDate": { "type": "string" },
          "TotalPurchaseAmount": { "type": "number" }
        },
        "required": ["userID", "ProductID", "QuantityPurchased", "PurchaseDate", "TotalPurchaseAmount"]
      },
      "Sale": {
        "type": "object",
        "properties": {
          "userID": { "type": "string" },
          "ProductID": { "type": "string" },
          "StoreID": { "type": "string" },
          "StockSold": { "type": "number" },
          "SaleDate": { "type": "string" },
          "TotalSaleAmount": { "type": "number" }
        },
        "required": ["userID", "ProductID", "StoreID", "StockSold", "SaleDate", "TotalSaleAmount"]
      },
      "Billing": {
        "type": "object",
        "properties": {
          "userID": { "type": "string" },
          "customerName": { "type": "string" },
          "customerPhone": { "type": "string" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product": { "type": "string" },
                "quantity": { "type": "number" }
              }
            }
          },
          "date": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["Pending", "Paid"] },
          "discountPercentage": { "type": "number" },
          "taxPercentage": { "type": "number" },
          "totalAmount": { "type": "string" },
          "priceAfterDiscount": { "type": "string" },
          "finalPrice": { "type": "string" },
          "invID": { "type": "string" }
        },
        "required": ["userID", "customerName", "customerPhone", "items", "date", "status", "discountPercentage", "taxPercentage", "totalAmount", "priceAfterDiscount", "finalPrice", "invID"]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
